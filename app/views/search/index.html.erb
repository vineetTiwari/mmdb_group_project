<%if user_signed_in? %>
  <input type ="checkbox" id="menuToggle">
  <label for="menuToggle" id="menu-icon">&#9776;</label>  
<%end%>

<nav id="slideinmenu">
  <% if user_signed_in? %>
    <li><%=link_to current_user.name, songs_path %>
    </li> 
      <%if current_user.profile_image_url.present? %>
        <li><%= image_tag current_user.profile_image_url %>
        <li>
      <%end%>
    <li><%= link_to 'Edit profile', edit_user_registration_path %>
    </li>
    <li><%= link_to 'Log out',destroy_user_session_path, method: :delete%>
    </li>
  <%end%>
</nav> 


<div id="mainpagediv center">
<h1 class="center mainheader"> mymusicdatabase.</h1><hr>
<h2 class="center mainheader2"> search all your favourite songs below</h1>


  <div class="well index-well">  
    <%= form_tag url: submit_search_path, method: :post do %>
      <div class="row">
        <div class="form-group">
           <div class="col-md-10">  
            <input  type="text" class="form-control" name="usersearch" 
                    placeholder=" Search" aria-describedby="basic-addon2" 
                    required/>
            </div>
            <div class="col-md-2">
            <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </div>
    <%end%>
  </div>
<%= link_to "Donate", new_charge_path, class:"btn btn-success" %>
<%= link_to "Whats Trending?", trending_index_path%>
</div>

