<div class="backgroundimage">
  <div class="well index-well">  
    <%= form_tag url: submit_search_path, method: :post do %>
      <div class="row">
        <div class="form-group">
           <div class="col-md-10">  
            <input  type="text" class="form-control" name="usersearch" 
                    placeholder=" Search" aria-describedby="basic-addon2" 
                    required/>
            </div>
            <div class="col-md-2">
            <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>
