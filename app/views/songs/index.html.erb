<!--########          MY COLLECTION INDEX VIEW       #####-->
<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-3 inlinedivs well sidebar-well">
      <%=form_tag("/songs", method: "get") do %>
        <%=text_field_tag(:searchmydb) %>
        <%=submit_tag("My Collection") %>
      <%end%>
      <%= link_to "View as List", songs_path(listing: true) %>
    </div>
    <div class="col-md-9">
      <%@songs.each do |mysong| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%=image_tag mysong.artwork %>
            <p id="songinfo">Name: <%=mysong.name%></p>
            <p id="songinfo">Artist: <%=mysong.artist%></p>
            <p id="songinfo">Album: <%=mysong.songalbum%></p>
            <!-- <p id="songinfo">Artist id: <%#=mysong.artistid%></p>
            <p id="songinfo">Album id: <%#=mysong.albumid%></p>
            <p id="songinfo">Song id: <%#=mysong.songid%></p> -->
            <p id="songinfo">My Rating: <%= rating_for mysong, "rating", :enable_half => true, :disable_after_rate => false %></p>
            <%=link_to "Remove from my collection", delete_songs_path(mysong), 
            method: :delete, data:{confirm: "are you sure?"} %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
